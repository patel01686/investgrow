<header>
  <div class="container header-container">
    <a href="/" class="logo" style="display: flex; align-items: center; gap: 12px; text-decoration: none;">
      <img
        src="/image/logo.jpg"
        alt="SREE KASHYAP INSTITUTE Logo"
        style="height: 60px; width: auto; background-blend-mode: lighten; vertical-align: middle; border-radius: 8px; margin-right: 0;"
      />
      <span class="navbar-institute-name" style="height: 60px; display: flex; align-items: center; font-size: 2.1rem; font-weight: 700; color: #fff; letter-spacing: 2px;">SREE KASHYAP INSTITUTE</span>
    </a>
    <nav>
      <ul>
        <li>
          <a href="/" class="<%= currentPage === 'home' ? 'active' : '' %>">Home</a>
        </li>
        <li>
          <a href="/courses" class="<%= currentPage === 'courses' ? 'active' : '' %>">Courses</a>
        </li>
        <li>
          <a href="/programs" class="<%= currentPage === 'programs' ? 'active' : '' %>">Programs</a>
        </li>
        <li>
          <a href="/instructors" class="<%= currentPage === 'instructors' ? 'active' : '' %>">Instructors</a>
        </li>
        <li>
          <a href="/about" class="<%= currentPage === 'about' ? 'active' : '' %>">About</a>
        </li>
        <li>
          <a href="/contact" class="<%= currentPage === 'contact' ? 'active' : '' %>">Contact</a>
        </li>
      </ul>
    </nav>
    <div class="auth-buttons">
      <% if (user) { %>
      <div class="user-menu">
        <a href="/dashboard" class="user-avatar">
          <%= user.name.charAt(0) %>
        </a>
      </div>
      <% } else { %>
      <a href="/auth/login" class="btn btn-outline">Log In</a>
      <a href="/auth/register" class="btn btn-primary">Sign Up</a>
      <% } %>
    </div>
  </div>


<!-- Animated Website Name Just Below Navbar -->
<div class="site-title-animated">
  <span>SREE KASHYAP INSTITUTE</span>
</div>

<style>
  .site-title-animated {
    width: 100%;
    text-align: center;
    margin-top: 16px;
    margin-bottom: 0.5rem;
    animation: bounceIn 1.2s cubic-bezier(0.23, 1, 0.32, 1);
    opacity: 1;
    background: #fff;
    border-radius: 0 0 18px 18px;
    box-shadow: 0 2px 16px #ffd60022;
    display: block;
    padding: 0.7rem 0 0.7rem 0;
    position: relative;
    z-index: 10;
  }
  .site-title-animated span {
    display: inline-block;
    font-size: 2.7rem;
    font-weight: 900;
    letter-spacing: 3px;
    background: linear-gradient(270deg, #ff6ec4, #7873f5, #42e695, #ffe140, #ff6ec4);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 4px 24px #ff6ec455, 0 2px 8px #7873f555;
    filter: drop-shadow(0 2px 8px #ffe14088);
    border-radius: 8px;
    padding: 0 18px;
    transition: transform 0.2s;
    animation: shimmer 3s linear infinite, bounceIn 1.2s cubic-bezier(0.23, 1, 0.32, 1);
  }
  @keyframes bounceIn {
    0% {
      opacity: 0;
      transform: scale(0.7) translateY(-60px);
    }
    60% {
      opacity: 1;
      transform: scale(1.1) translateY(10px);
    }
    80% {
      transform: scale(0.98) translateY(-4px);
    }
    100% {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }
  @keyframes shimmer {
    0% {
      background-position: 0% 50%;
    }
    100% {
      background-position: 100% 50%;
    }
  }
  .user-menu {
    display: flex;
    align-items: center;
  }

  .user-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--primary);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    text-decoration: none;
    transition: var(--transition);
  }

  .user-avatar:hover {
    transform: scale(1.1);
  }
</style>
