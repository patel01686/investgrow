      }
      .pw-course-title-center {
        color: #ffd600;
        font-size: 2.4rem;
        font-weight: 800;
        text-align: center;
        margin: 0;
        letter-spacing: 0.5px;
      }
      .pw-course-hero-bg {
        position: relative;
        min-height: 340px;
