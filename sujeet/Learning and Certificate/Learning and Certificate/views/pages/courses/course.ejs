<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/head', { title: course.title }) %>
  <body>
    <!-- Navbar intentionally removed from course details page -->
    <main>
      <section class="pw-course-titlebar">
        <div class="container" style="position:relative;">
          <% if (currentPage === 'courses') { %>
            <a href="/courses" class="back-btn pw-back-btn" style="position:absolute;left:0;top:50%;transform:translateY(-50%);z-index:2;">
              <span>&#8592;</span>
            </a>
          <% } %>
          <h1 class="pw-course-title-center"><%= course.title %></h1>
        </div>
      </section>
      <!-- Removed pw-course-titlebar and course title center -->
      <!-- Removed pw-course-titlebar and course title center -->
      <section class="pw-course-hero">
        <div class="pw-course-hero-bg" style="background-image:url('<%= course.image %>');">
          <div class="pw-course-hero-overlay">
            <nav class="pw-resource-navbar">
              <a class="pw-resource-btn" href="/resources/<%= encodeURIComponent(course.title) %>/ppt" target="_blank">PPT</a>
              <a class="pw-resource-btn" href="/resources/<%= encodeURIComponent(course.title) %>/pdf" target="_blank">PDF</a>
              <a class="pw-resource-btn" href="/resources/<%= encodeURIComponent(course.title) %>/notes" target="_blank">Notes</a>
              <a class="pw-resource-btn" href="/resources/<%= encodeURIComponent(course.title) %>/videos" target="_blank">Videos</a>
              <a class="pw-resource-btn" href="/resources/<%= encodeURIComponent(course.title) %>/important-questions" target="_blank">Important Questions</a>
              <a class="pw-resource-btn" href="/resources/<%= encodeURIComponent(course.title) %>/instruction" target="_blank">Instruction</a>
            </nav>
          </div>
          <div class="pw-course-hero-content">
            <h1 class="pw-course-title"><%= course.title %></h1>
            <!-- Removed pw-course-title -->
            <% if (course.badge) { %>
              <span class="pw-badge-detail"><%= course.badge %></span>
            <% } %>
            <!-- Removed pw-course-title -->
            <div class="pw-course-meta">
              <span><i class="fas fa-clock"></i> <%= course.duration %></span>
              <span><i class="fas fa-signal"></i> <%= course.level %></span>
              <span><i class="fas fa-tag"></i> <%= course.category %></span>
            </div>
            <div class="pw-course-price">₹<%= course.price %></div>
            <p class="pw-course-desc"><%= course.description %></p>
          </div>
        </div>
      </section>
      <section class="pw-course-detail-main">
        <div class="pw-course-detail-container">
          <div class="pw-course-detail-left">
            <h2>Course Details</h2>
            <ul class="pw-course-info-list">
              <% if (course.details && course.details.subjects) { %>
                <li><strong>Subjects:</strong> <%= course.details.subjects.join(', ') %></li>
              <% } %>
              <% if (course.details && course.details.mode) { %>
                <li><strong>Mode:</strong> <%= course.details.mode %></li>
              <% } %>
              <% if (course.details && course.details.batchSize) { %>
                <li><strong>Batch Size:</strong> <%= course.details.batchSize %></li>
              <% } %>
              <% if (course.details && course.details.highlights) { %>
                <li><strong>Highlights:</strong>
                  <ul class="pw-highlight-list">
                    <% course.details.highlights.forEach(function(h) { %>
                      <li><i class="fas fa-check-circle"></i> <%= h %></li>
                    <% }); %>
                  </ul>
                </li>
              <% } %>
              <% if (course.details && course.details.notes) { %>
                <li><strong>Notes:</strong> <%= course.details.notes %></li>
              <% } %>
            </ul>
          </div>
          <div class="pw-course-detail-right">
            <div class="pw-enroll-card">
              <div class="pw-enroll-price">₹<%= course.price %></div>
              <a href="#" class="pw-enroll-btn">Enroll Now</a>
              <% if (course.details && course.details.batchSize) { %>
                <div class="pw-batch-info">Batch Size: <%= course.details.batchSize %></div>
              <% } %>
            </div>
          </div>
        </div>
      </section>
      <!-- Video Section -->
      <section class="pw-course-video-section" style="margin: 40px auto; max-width: 900px; text-align: center;">
        <h2 style="color:#0a2540; font-size:2rem; font-weight:700; margin-bottom:18px;">Course Demo Video</h2>
        <video controls style="width:100%; max-width:700px; border-radius:16px; box-shadow:0 4px 24px rgba(10,37,64,0.10);">
          <source src="/neet/inline.mp4" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      </section>
      <!-- Testimonial Section Placeholder -->
      <section class="pw-testimonial-section">
        <div class="pw-testimonial-placeholder">Student testimonials coming soon...</div>
      </section>
    </main>
    <style>
      .pw-course-titlebar {
        background: #0a2540;
        padding: 24px 0;
        margin-bottom: 32px;
        border-radius: 12px;
        box-shadow: 0 2px 16px #0a254022;
        color: #fff;
        text-align: center;
        position: relative;
      }
      .pw-course-title-center {
        font-size: 2.2rem;
        font-weight: 800;
        letter-spacing: 1.5px;
        margin: 0;
        color: #ffd600;
        text-shadow: 0 2px 12px #ffd60033;
      }
      .pw-course-title {
        font-size: 2.1rem;
        font-weight: 800;
        letter-spacing: 1.5px;
        margin: 0 0 12px 0;
        color: #0a2540;
        text-shadow: 0 2px 12px #ffd60033;
      }
      /* Removed pw-course-titlebar, pw-course-title-center, and pw-course-title styles */
      body { background: #f8fafc; }
