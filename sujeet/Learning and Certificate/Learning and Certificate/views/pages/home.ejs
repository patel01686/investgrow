<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', { title: title }) %>
  <body>
    <%- include('../partials/header', { currentPage: currentPage, user: user })
    %>

    <!-- Hero Section -->
    <section class="hero">
      <div class="container hero-container" style="display: flex; flex-wrap: wrap; align-items: center; justify-content: space-between; gap: 32px;">
        <div class="hero-content" style="flex: 1 1 320px; min-width: 260px;">
          <h1 style="font-size:2.7rem;font-weight:800;color:#0A2540;line-height:1.1;margin-bottom:18px;">Bharatâ€™s Trusted & Affordable<br>Educational Platform</h1>
          <p style="font-size:1.15rem;color:#fff;max-width:480px;margin-bottom:24px;">
            Join millions of students and professionals learning with SREE KASHYAP INSTITUTE. Live & recorded classes, practice questions, and expert guidance for JEE, NEET, Boards, and more.
          </p>
          <div class="cta-buttons" style="margin-bottom:24px; display: flex; flex-wrap: wrap; gap: 12px;">
            <a href="/courses" class="btn btn-primary" style="flex:1 1 140px;min-width:120px;">Explore Courses</a>
            <a href="#" class="btn btn-outline" style="flex:1 1 140px;min-width:120px;">Download App</a>
          </div>
          <div class="hero-stats" style="display: flex; flex-wrap: wrap; gap: 16px;">
            <% if (stats && stats.length) { stats.forEach(function(stat) { %>
            <div class="stat-item" style="background:rgba(255,255,255,0.08);border-radius:8px;padding:10px 18px;min-width:90px;text-align:center;">
              <span class="stat-value" style="font-size:1.2rem;font-weight:700;display:block;"> <%= stat.value %> </span>
              <span class="stat-label" style="font-size:0.95rem;"> <%= stat.label %> </span>
            </div>
            <% }); } %>
          </div>
        </div>
        <div class="hero-image" style="flex: 1 1 260px; min-width: 220px; display: flex; justify-content: center; align-items: center;">
          <img
            src="https://qnextech.com/wp-content/uploads/2023/03/%E6%95%99%E5%AE%A4%E5%9C%BA%E6%99%AF-1536x838.jpg"
            alt="Lecture Hall"
            style="width:100%;max-width:340px;height:auto;border-radius:18px;box-shadow:0 8px 32px rgba(10,37,64,0.10);object-fit:cover;"
          />
        </div>
      </div>
      <style>
        @media (max-width: 900px) {
          .hero-container { flex-direction: column; gap: 24px !important; }
          .hero-content, .hero-image { min-width: 0 !important; width: 100% !important; }
          .hero-image img { max-width: 100% !important; }
        }
        @media (max-width: 600px) {
          .hero-content h1 { font-size: 2rem !important; }
          .hero-content p { font-size: 1rem !important; }
          .hero-stats { gap: 8px !important; }
        }
      </style>
    </section>

    <!-- Features Section -->
    
    <!-- Testimonials Section -->
    <section class="testimonials">
      <div class="container">
        <div class="section-header">
          <h2>Success Stories</h2>
          <p>Hear from our learners who transformed their careers</p>
        </div>

        <div class="testimonial-grid">
          <% if (testimonials && testimonials.length) {
          testimonials.forEach(function(testimonial) { %>
          <div class="testimonial-card">
            <div class="testimonial-content">
              <p>"<%= testimonial.content %>"</p>
            </div>
            <div class="testimonial-author">
              <div class="author-avatar"><%= testimonial.initials %></div>
              <div class="author-info">
                <h4><%= testimonial.author %></h4>
                <p><%= testimonial.position %></p>
                <div class="rating">
                  <% for(var i = 1; i <= 5; i++) { %> <% if(i <=
                  testimonial.rating) { %>
                  <i class="fas fa-star"></i>
                  <% } else if(i - 0.5 === testimonial.rating) { %>
                  <i class="fas fa-star-half-alt"></i>
                  <% } else { %>
                  <i class="far fa-star"></i>
                  <% } %> <% } %>
                </div>
              </div>
            </div>
          </div>
          <% }); } %>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="cta">
      <div class="container">
        <h2>Ready to Transform Your Career?</h2>
        <p>
          Join thousands of professionals who have advanced their careers with
          our industry-leading programs. Take the first step toward your future
          today.
        </p>

        <div class="cta-buttons">
          <a href="/courses" class="btn btn-light">Find Your Program</a>
          <a
            href="#"
            class="btn btn-outline"
            style="color: white; border-color: white"
            >Speak to an Advisor</a
          >
        </div>
      </div>
    </section>

    <%- include('../partials/footer') %>
  </body>
</html>
